{
  "name": "pirate-bartender",
  "version": "1.0.0",
  "description": "",
  "main": "js/main.js",
  "scripts": {
    "mkdir": "mkdir -p build",
    "build:css": "npm run clean:css && cat css/*.css | cleancss -o build/$npm_package_name.min.css",
    "clean:css": "rm -fr buil/$npm_package_name.min.css",
    "watch:css": "npm run build:css && chokidar 'css/*.css' -c 'npm run build:css'",
    "build:html": "npm run clean:html && cp *.html build/",
    "clean:html": "rm -fr build/*.html",
    "watch:html": "npm run build:html && chokidar '*.html' -c 'npm run build:html'",
    "build:js": "npm run clean:js && webpack",
    "watch:js": "npm run build:js && webpack --watch",
    "clean:js": "rm -f build/$npm_package_name.$npm_package_version.js build/$npm_package_name.$npm_package_version.js.map",
    "build": "npm run clean && npm run mkdir && npm run build:html && npm run build:css && npm run build:js",
    "watch": "npm run watch:html & npm run watch:css & npm run watch:js",
    "clean": "rm -fr build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bryantee/pirate-bartender.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bryantee/pirate-bartender/issues"
  },
  "homepage": "https://github.com/bryantee/pirate-bartender#readme",
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "chokidar-cli": "^1.2.0",
    "clean-css": "^3.4.20",
    "less": "^2.7.1",
    "webpack": "^1.13.2"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "jquery": "^3.1.1"
  }
}
